
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostActivity" >

        <EditText
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:layout_below="@+id/contentLabel"
            android:layout_alignLeft="@+id/contentLabel"
            android:layout_alignRight="@+id/contentLabel"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_post"
                android:id="@+id/isPublic"
                android:layout_below="@+id/content"
                android:layout_alignLeft="@+id/image"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:src="@drawable/ic_launcher"
                android:layout_below="@+id/title"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:maxHeight="384dp"
                android:adjustViewBounds="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/post_description"
                android:id="@+id/contentLabel"
                android:layout_below="@+id/image"
                android:layout_alignLeft="@+id/image"
                android:layout_alignRight="@+id/image"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/post_title"
                android:id="@+id/titleLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignBaseline="@+id/title"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/titleLabel"/>
    </RelativeLayout>
</ScrollView>