<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="jconnect.droid.color.lavender">#e6e6fa</color>
    <color name="jconnect.droid.color.atlassian_blue">#1c3664</color>

    <style name="jconnect" />
    <style name="jconnect.droid" />
    <style name="jconnect.droid.style" />

    <style name="jconnect.droid.style.main">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="jconnect.droid.style.secondary">
        <item name="android:background">@color/jconnect.droid.color.lavender</item>
    </style>

    <style name="jconnect.droid.style.input_container" parent="jconnect.droid.style.secondary">
        <item name="android:paddingTop">7dip</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/jconnect.droid.color.atlassian_blue</item>
    </style>

    <style name="jconnect.droid.style.message_item" parent="jconnect.droid.style.secondary">
        <item name="android:padding">7dip</item>
    </style>

    <style name="jconnect.droid.style.header_item" parent="jconnect.droid.style.main">
        <item name="android:padding">7dip</item>
    </style>

    <style name="jconnect.droid.style.divider" >
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="jconnect.droid.style.padded_divider_container">
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingRight">5dip</item>
    </style>

    <style name="jconnect.droid.style.light_divider" >
        <item name="android:background">@color/jconnect.droid.color.lavender</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="jconnect.droid.style.main_font">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">2dip</item>
    </style>

    <style name="jconnect.droid.style.secondary_font">

        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
