<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.e43.impeller"
    android:versionCode="000005005"
    android:versionName="0.5.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="eu.e43.impeller.ImpellerApplication">

        <provider
            android:name="eu.e43.impeller.content.PumpContentProvider"
            android:label="Pump.io"
            android:authorities="eu.e43.impeller.content"
            android:enabled="true"
            android:exported="true"
            android:syncable="true"
            android:process=":sync"
            />

        <service
                android:name="eu.e43.impeller.account.AuthenticatorService"
                android:enabled="true"
                android:exported="true"
                android:process=":sync">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                    android:name="android.accounts.AccountAuthenticator"
                    android:resource="@xml/authenticator" />
        </service>

        <service
                android:name="eu.e43.impeller.content.FeedSyncService"
                android:exported="true"
                android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                    android:name="android.content.SyncAdapter"
                    android:resource="@xml/feed_sync_adapter" />
        </service>

        <service
                android:name="eu.e43.impeller.contacts.SyncService"
                android:exported="true"
                android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                    android:name="android.content.SyncAdapter"
                    android:resource="@xml/contact_sync_adapter" />
            <meta-data
                    android:name="android.provider.CONTACTS_STRUCTURE"
                    android:resource="@xml/contact_profile" />
        </service>

        <activity
                android:name=".MainActivity"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="eu.e43.impeller.account.LoginActivity"
                android:label="@string/title_activity_login"
                android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <activity
            android:name="eu.e43.impeller.PostActivity"
            android:label="@string/title_activity_post"
            android:theme="@style/AppTheme"
            android:parentActivityName="eu.e43.impeller.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.e43.impeller.MainActivity" />
            
			<intent-filter>
                <action android:name="android.intent.action.SEND" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
            </intent-filter>
        </activity>

        <!-- JMC crash reporting -->
        <activity android:name="com.atlassian.jconnect.droid.activity.FeedbackActivity"
                  android:label="@string/jconnect.droid.create_feedback">
        </activity>
        <activity android:name="com.atlassian.jconnect.droid.activity.FeedbackInboxActivity"
                  android:label="@string/jconnect.droid.feedback_inbox">
        </activity>
        <activity android:name="com.atlassian.jconnect.droid.activity.ViewFeedbackActivity"
                  android:label="@string/jconnect.droid.feedback_inbox">
        </activity>
        <service android:name="com.atlassian.jconnect.droid.service.RemoteFeedbackService" />
        <service android:name="com.atlassian.jconnect.droid.service.FeedbackPollingService" />

        <activity android:name="org.acra.CrashReportDialog"
                  android:theme="@style/AppDialogTheme"
                  android:launchMode="singleInstance"
                  android:excludeFromRecents="true"
                  android:finishOnTaskLaunch="true" />
    </application>

</manifest>